.header-inner,
.main-inner {
    margin-top: 20px;
}

// 背景图片
body::before {
    background-image: url(https://w.wallhaven.cc/full/x1/wallhaven-x1rowv.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50% 50%;
    content: " ";
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -2;
}



//  内容区域 设置

.posts-expand .post-meta {
    margin: 3px 0 30px 0;
}
.post-block {
    padding: 30px;
}
p {
    margin: 0 0 10px 0;
}




// 内容透明

.content-wrap {
  opacity: 0.7;
}

.sidebar {
  opacity: 0.7;
}

.header-inner {
  background: rgba(255,255,255,0.7);
}

.popup {
  opacity: 1;
}

